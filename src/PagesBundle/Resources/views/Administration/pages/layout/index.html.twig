{% extends '::layout/baseAdmin.html.twig' %}

{% block body %}
    <h1>Liste des pages</h1>

    <a class="btn btn-primary" href="{{ path('admin_pages_new') }}">Nouvelle page</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
                <tr>
                    <td><a href="{{ path('admin_pages_show', { 'id': page.id }) }}">{{ page.titre }}</a></td>
                    <td>
                        <a href="{{ path('admin_pages_show', { 'id': page.id }) }}"><i class="fa fa-eye"></i></a>
                        <a href="{{ path('admin_pages_edit', { 'id': page.id }) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
