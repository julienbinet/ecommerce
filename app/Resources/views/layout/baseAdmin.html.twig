<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block titre %}Ecommerce - Admin{% endblock %}</title>
        <meta name="keywords" content="{% block motsCles %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        {#<link rel="stylesheet" href="{{asset('css/admin-bootstrap.css')}}" />
        <link rel="stylesheet" href="{{asset('css/admin-bootstrap-responsive.css')}}" />#}
        <link rel="stylesheet" href="{{asset('css/bootstrap.css')}}" />
        <link rel="stylesheet" href="{{asset('css/bootstrap-theme.css')}}" />
        <link rel="stylesheet" href="{{asset('css/styleAdmin.css')}}" />
        <link rel="stylesheet" href="{{asset('css/font-awesome.css')}}" />
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>



    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('produit') }}">Administration</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                    <li> <a href="{{ path('produit') }}">Allez sur le site</a></li>
                </ul>


            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>


    <div class="container-fluid">
        <div class="row">

            <div class="col-xs-12 col-sm-2 sidebar">
                {% include '::modules/navigationAdmin.html.twig' %}
            </div>

            <div class="col-xs-12 col-sm-9 col-sm-offset-3">
            {% block body %}{% endblock %}
        </div>

    </div>
</div>

<hr />

<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-offset-3">
                <p>&copy; Copyright {{"now"|date('Y')}} - Binet Julien</p>
            </div>
        </div>
</footer>		
<script src="{{ asset('js/jquery-1.10.0.min.js')}}"></script>
<script src="{{ asset('js/bootstrap.js')}}"></script>
<script src="{{ asset('bundles/pages/ckeditor/ckeditor.js')}}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>