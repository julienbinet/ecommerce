{% extends '::layout/baseAdmin.html.twig' %}

{% block body %}
    <h1>Pages</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.contenu |raw}}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a href="{{ path('admin_pages_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('admin_pages_edit', { 'id': page.id }) }}" class="btn btn-primary">Editer</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Supprimer" onclick="return confirm('Voulez-vous supprimer cette page ?')">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
