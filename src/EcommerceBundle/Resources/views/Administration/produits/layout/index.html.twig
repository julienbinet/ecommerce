{% extends '::layout/baseAdmin.html.twig' %}

{% block body %}
    <h1>Produits list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Nom</th>
{#                <th>Description</th>#}
                <th>Prix</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <tr>
{#                    <td><a href="{{ path('admin_produits_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>#}
                    <td><a href="{{ path('admin_produits_show', { 'id': produit.id }) }}">{{ produit.nom }}</a></td>
{#                    <td>{{ produit.description }}</td>#}
                    <td>{{ produit.prix }}</td>
                    <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <a href="{{ path('admin_produits_show', { 'id': produit.id }) }}"><i class="icon-book"></i></a>
                        <a href="{{ path('admin_produits_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_produits_new') }}">Nouveau produit</a>
        </li>
    </ul>
{% endblock %}
