{% extends '::layout/baseAdmin.html.twig' %}

{% block body %}
    <h1>Liste des produits</h1>
    
    <a href="{{ path('admin_produits_new') }}" class="btn btn-primary">Nouveau produit</a>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Cat√©gorie</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in produits %}
                <tr>
                    <td>   
                        <a href="{{ path('admin_produits_show', { 'id' : produit.id }) }}">
                            <img src="{{ produit.image.AssetPath|imagine_filter('my_thumb_mini') }}" class='img-responsive' alt="{{ produit.image.name }}" >
                        </a>
                    </td>
                    <td><a href="{{ path('admin_produits_show', { 'id': produit.id }) }}">{{ produit.nom }}</a></td>
                        {#                    <td>{{ produit.description }}</td>#}
                    <td>{{ produit.prix }}</td>
                    <td>{{ produit.categorie }}</td>
                    <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
                    <td>
                        <a href="{{ path('admin_produits_show', { 'id': produit.id }) }}"><i class="fa  fa-eye"></i></a>
                        <a href="{{ path('admin_produits_edit', { 'id': produit.id }) }}"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
