{% extends '::layout/baseAdmin.html.twig' %}

{% block body %}
    <h1>Liste des commandes</h1>

    {{ dump(commandes) }}
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Référence</th>
                <th>Client</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.date | date('d/m/Y h:m:s') }}</td>
                    <td>{{ commande.reference }}</td>
                    <td>{{ commande.utilisateur.username }}</td>
                    <td>{{ commande.valider }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
