{% extends '::layout/baseAdmin.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                {#                <th>Id</th>#}
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    {#                <td>{{ category.id }}</td>#}
                    <td><a href="{{ path('admin_categories_show', { 'id': category.id }) }}">{{ category.nom }}</a></td>
                    <td>
                        <a href="{{ path('admin_categories_show', { 'id': category.id }) }}"><i class="icon-book"></i></a>
                        <a href="{{ path('admin_categories_edit', { 'id': category.id }) }}"><i class="icon-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_categories_new') }}">Nouvelle catégorie</a>
        </li>
    </ul>
{% endblock %}
